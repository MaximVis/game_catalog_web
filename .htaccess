RewriteEngine On

# Правило для семантических URL (новый формат)
RewriteRule ^game/([^/]+)/?$ game.php?game=$1 [L,QSA]

# Редирект со старых URL на новые (уберите если хотите сохранить оба формата)
RewriteCond %{THE_REQUEST} /game\.php\?game=([^\s&]+) [NC]
RewriteRule ^game\.php$ /game/%1? [R=301,L]

# Если файл или директория существуют - используем их
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d